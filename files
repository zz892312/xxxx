name: Application Onboarding Request
description: Submit a new application for onboarding
title: "[ONBOARDING] "
labels: ["onboarding", "pending-approval"]
assignees:
  - team-lead

body:
  - type: markdown
    attributes:
      value: |
        ## Application Onboarding Request
        Please fill out this form to request onboarding for a new application.

  - type: input
    id: app_code
    attributes:
      label: Application Code
      description: Unique identifier for the application
      placeholder: "e.g., APP-001"
    validations:
      required: true

  - type: input
    id: app_name
    attributes:
      label: Application Name
      description: Full name of the application
      placeholder: "e.g., Data Analytics Platform"
    validations:
      required: true

  - type: textarea
    id: description
    attributes:
      label: Description
      description: Brief description of the application
      placeholder: Describe the purpose and functionality of the application
    validations:
      required: true

  - type: input
    id: requester
    attributes:
      label: Requester Name
      description: Your full name
    validations:
      required: true

  - type: input
    id: requester_email
    attributes:
      label: Requester Email
      description: Your email address
    validations:
      required: true

  - type: checkboxes
    id: compatibilities
    attributes:
      label: Required Compatibilities
      description: Select all compatibility requirements for this application
      options:
        - label: ADT (Application Development Tools)
        - label: Jupyter (Notebook Environment)
        - label: Airflow (Workflow Orchestration)

  - type: dropdown
    id: priority
    attributes:
      label: Priority
      description: What is the priority level?
      options:
        - Low
        - Medium
        - High
        - Critical
      default: 1
    validations:
      required: true

  - type: textarea
    id: additional_notes
    attributes:
      label: Additional Notes
      description: Any additional information or special requirements
      placeholder: Add any other relevant details here
