initContainers:
        - name: storage-initializer
          image: your-registry/storage-initializer-with-cert:latest
          args:
            - "s3://your-bucket/model"
            - "/mnt/models"
          env:
            - name: AWS_ACCESS_KEY_ID
              valueFrom:
                secretKeyRef:
                  name: your-s3-secret
                  key: AWS_ACCESS_KEY_ID
            - name: AWS_SECRET_ACCESS_KEY
              valueFrom:
                secretKeyRef:
                  name: your-s3-secret
                  key: AWS_SECRET_ACCESS_KEY
            - name: AWS_REGION
              value: "us-west-2"
            - name: AWS_ENDPOINT_URL  # if using custom S3 endpoint
              value: "https://your-s3-endpoint"
RUN mkdir -p /mnt/models && \
    chmod 755 /mnt/models && \
    chown -R 65532:65532 /mnt/models

# Switch back to non-root user (if the base image uses one)
USER 65532
