    <script>
        let completedTasks = 0;
        const totalTasks = 12;

        function toggleSection(header) {
            const content = header.nextElementSibling;
            const icon = header.querySelector('.icon');
            
            content.classList.toggle('active');
            header.classList.toggle('active');
            
            // Reset section styling when manually opened
            if (content.classList.contains('active')) {
                header.style.background = 'linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%)';
                header.style.borderLeft = '4px solid #4CAF50';
            }
        }

        function toggleItem(item) {
            const checkbox = item.querySelector('.checkbox');
            const isCompleted = checkbox.classList.contains('checked');
            
            if (isCompleted) {
                checkbox.classList.remove('checked');
                item.classList.remove('completed');
                completedTasks--;
            } else {
                checkbox.classList.add('checked');
                item.classList.add('completed');
                completedTasks++;
            }
            
            updateProgress();
            checkSectionCompletion(item);
        }

        function checkSectionCompletion(item) {
            const section = item.closest('.checklist-section');
            const sectionItems = section.querySelectorAll('.checklist-item');
            const completedItems = section.querySelectorAll('.checklist-item.completed');
            
            // If all items in the section are completed, auto-collapse after a delay
            if (sectionItems.length === completedItems.length) {
                setTimeout(() => {
                    const header = section.querySelector('.section-header');
                    const content = section.querySelector('.section-content');
                    
                    if (content.classList.contains('active')) {
                        content.classList.remove('active');
                        header.classList.remove('active');
                        
                        // Add a visual indicator that section is complete
                        header.style.background = 'linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%)';
                        header.style.borderLeft = '4px solid #28a745';
                    }
                }, 500); // 0.5 second delay to let user see completion
            }
        }

        function updateProgress() {
            const progressPercent = Math.round((completedTasks / totalTasks) * 100);
            
            document.getElementById('progressFill').style.width = progressPercent + '%';
            document.getElementById('completedCount').textContent = completedTasks;
            document.getElementById('progressPercent').textContent = progressPercent + '%';
            
            if (completedTasks === totalTasks) {
                document.getElementById('completionBadge').classList.add('show');
            } else {
                document.getElementById('completionBadge').classList.remove('show');
            }
        }

        function copyCode(button) {
            const codeContent = button.closest('.code-section').querySelector('.code-content');
            const text = codeContent.textContent;
            
            navigator.clipboard.writeText(text).then(() => {
                const originalText = button.textContent;
                button.textContent = 'Copied!';
                button.style.background = '#28a745';
                
                setTimeout(() => {
                    button.textContent = originalText;
                    button.style.background = '#4CAF50';
                }, 2000);
            });
        }

        // Initialize first section as open
        document.querySelector('.section-header').click();
    </script>
</body>
