    - name: predictor
      image: inference-runtime:pytorch
      env:
      - name: MODEL_PATH
        value: s3://my-bucket/model/
      resources:
        requests:
          cpu: '2'
          memory: 4Gi
          nvidia.com/gpu: '1'
